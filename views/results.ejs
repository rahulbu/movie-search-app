<html>
    <head>
        <title>Results</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <style>
            .jumbotron{
                padding : 0 auto;
            }
            #button{
                padding-top : 20px ;
            }
        </style>
    </head>
    <body>
        <div class="jumbotron">
            <h1 class="display-4" align="center">Results ...</h1>
        </div>
        <div class="container">
            <ul class="list-group">
               <% if(parse["Search"]) { %>
                <% parse["Search"].forEach(function(movie){ %>
                    <li class="list-group-item list-group-item-info"> <%= movie["Title"] %>  <b> <%= movie["Year"] %></b></li>
                <%    }); } else { %>
                    <h4>No results found.</h4>
                <% } %>
            </ul>
        </div>
     <div id="button" class="pagination justify-content-center">
         <a class="btn btn-large btn-primary" href="/search">search again</a>
     </div>
    
    </body>
</html>









